<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="destinationVM"
            type="com.example.mrrobot.concurrent.ui.destination.DestinationViewModel" />
        <variable
            name="destinationSelected"
            type="com.example.mrrobot.concurrent.models.Destination" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
       <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp">
            <android.support.v7.widget.CardView

                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="?attr/color_secondary"
                app:cardCornerRadius="25dp">
                <ImageView

                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:tint="?attr/color_accent"
                    />
            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <!--SEARCH-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="top|center"
            android:layout_marginTop="90dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSearchGooglePlace"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:text="Buscar" />


        </LinearLayout>


        <!--BOTTON-->
        <RelativeLayout

            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">


            <!--Results-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="Ellos Tienen El mismo Destino:"


                    />
                <!--Recycler View: Destinations -->
                <android.support.v7.widget.RecyclerView

                    android:id="@+id/rvDestinationsFound"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:orientation="horizontal"
                    android:scrollbars="horizontal">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                >

                <Button
                    android:drawableLeft="@drawable/ic_cancel_black_24dp"
                    android:drawableTint="#4564"
                    android:layout_width="48dp"
                    android:onClick="@{()->destinationVM.deleteSelection()}"
                    android:layout_height="wrap_content" />

                <!--<include
                    layout="@layout/destination"
                    bind:destination='@{destinationVM.destinationObservableField}' />
-->
                <Button
                    android:id="@+id/btnSubmitDestination"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="unirse"
                    android:layout_marginLeft="20dp"
                    android:visibility="visible" />
            </LinearLayout>

        </RelativeLayout>


        <!--MAP-->
    </RelativeLayout >

</layout>


